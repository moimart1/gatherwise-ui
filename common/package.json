{
  "name": "@gatherwise/common-frontend-libs",
  "version": "0.1.0",
  "description": "Common Frontend libs",
  "type": "module",
  "keywords": [
    "react-application",
    "react"
  ],
  "main": "index.jsx",
  "files": [
    "libs",
    "components",
    "hooks",
    "logos",
    "services",
    "pages",
    "test-helpers",
    "tailwind.config.js",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "compile": "npm run clean && cross-env NODE_ENV=production babel . --out-dir dist --ignore __tests__,spec.js,test.js,stories.js,__snapshots__,__mocks__",
    "test": "NODE_ENV=test vitest run --coverage.all --reporter=default --coverage.reportsDirectory ${TEST_RESULTS_COVERAGE_REPORT_DIR:-test/results/coverage}",
    "test:html": "npm run test -- --coverage.enabled --reporter=html && echo \"Coverage available here: ${TEST_RESULTS_COVERAGE_REPORT_DIR:-test/results/coverage}/index.html\"",
    "test:ci": "CI=true npm run test -- --coverage.enabled --reporter=junit --reporter=hanging-process --outputFile.junit=${TEST_RESULTS_DIR:-test/results}/junit-tests.xml",
    "lint": "eslint --ext .js,.jsx ./",
    "lint:ci": "eslint --ext .js,.jsx --output-file ${TEST_RESULTS_LINT_REPORT_PATH:-test/results/eslint-report.xml} --format checkstyle .",
    "lint:html": "eslint --ext .js,.jsx --output-file ${TEST_RESULTS_LINT_REPORT_PATH:-test/results/eslint-report.html} --format html .",
    "audit:ci": "npm audit --json --production > ${TEST_RESULTS_AUDIT_REPORT_JSON_PATH:-test/results/npm-audit-report.json}"
  },
  "overrides": {
    "@casl/ability": {
      "@ucast/mongo2js": {
        "@ucast/js": "3.0.4"
      }
    }
  },
  "peerDependencies": {
    "@casl/ability": "^6.7.1",
    "@casl/react": "^3.1.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/pro-light-svg-icons": "^6.5.2",
    "@fortawesome/pro-regular-svg-icons": "^6.5.2",
    "@fortawesome/pro-solid-svg-icons": "^6.5.2",
    "@fortawesome/react-fontawesome": "^0.2.1",
    "@headlessui/react": "^2.0.3",
    "@tailwindcss/forms": "^0.5.7",
    "async-mutex": "^0.5.0",
    "axios": "^1.6.8",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.11",
    "debounce": "^2.0.0",
    "humanize-duration": "^3.32.0",
    "jwt-decode": "^4.0.0",
    "mqtt": "^5.6.1",
    "mqtt-pattern": "^2.1.0",
    "nanoid": "^5.0.7",
    "oidc-client-ts": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1",
    "react-select": "^5.8.0",
    "tailwind-scrollbar-hide": "^1.1.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "prop-types": "^15.8.1",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.3"
  }
}